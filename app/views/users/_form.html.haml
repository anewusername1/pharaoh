= f.error_messages

%p
  = f.label :name
  %br
  = f.text_field :name

%p
  = f.label :email
  %br
  = f.text_field :email

%p
  = f.label :password
  %br
  = f.password_field :password

%p
  = f.label :password_confirmation
  %br
  = f.password_field :password_confirmation

- if can? :manage, @users
%p
  = f.label :role
  \:
  = f.collection_select :role, User::ROLES, :to_s, :humanize, {:include_blank => true}

%p
  = f.submit "Submit"
